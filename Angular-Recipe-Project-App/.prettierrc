{
	"bracketSpacing" true,
	"arrowParens": "avoid",
	"parser":"babel",
	"semi": true,
	"singleQuote": true,
	"proseWrap": "preserve",
	"printWidth": 125,
	"trailingComma": "es5",
  "useTabs": true,
	"overrides": [
		{
			"files": "*.component.ts",
			"options": {
				"parser": "typescript",
				"useTabs": true
			}
		},
		{
			"files": "*.component.html",
			"options": {
				"parser": "angular",
				"htmlWhitespaceSensitivity": "ignore"
			}
		},
		{
			"files": ".html",
			"options": {
				"parser": "html",
				"htmlWhitespaceSensitivity": "ignore"
			}
    },
    {
      "files":".json",
      "options": {
        "parser": "json"
      }
    }
	]
}
